<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vaguinho.brennosbar.CadastroEvento">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/evento_foto"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.10"
            app:srcCompat="@android:color/darker_gray" />

        <EditText
            android:id="@+id/evento_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Título"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="243dp" />

        <EditText
            android:id="@+id/evento_data"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Data do Evento"
            android:inputType="date"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="295dp" />

        <EditText
            android:id="@+id/evento_descricao"
            android:layout_width="368dp"
            android:layout_height="157dp"
            android:ems="10"
            android:hint="Descrição"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="346dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/salvar_btn"
            android:text="SALVAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
